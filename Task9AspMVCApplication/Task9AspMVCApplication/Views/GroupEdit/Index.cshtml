@model IEnumerable<Task9AspMVCApplication.Core.Models.Group>

<h2>Edit Group</h2>

@{ 
    int id = (int)(ViewBag.Id ?? Model.FirstOrDefault()?.Id);
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="FormatIt" method="post">
                <label for="groupSelect">Select Group:</label>
                <select id="groupSelect" name="groupId" class="form-control">
                    @foreach (var group in Model)
                    {
                        if (group.Id == id)
                        {
                            <option value="@group.Id" selected="selected">@group.Name</option>
                        }
                        else
                        {
                            <option value="@group.Id">@group.Name</option>
                        }
                    }
                </select>

                <div>
                    <label>Name:</label>
                    <input type="text" id="studentName" name="name" class="form-control" placeholder="Enter name" />
                </div>

                <div class="d-flex justify-content-center">
                    <button class="btn btn-primary" style="margin-top: 20px;">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>


